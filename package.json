{
  "name": "zenn-content",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "preview": "zenn preview",
    "new:article": "zenn new:article",
    "fmt": "prettier --write \"**/*.{md,mdx}\"",
    "lint:md": "markdownlint articles/*.md --ignore node_modules",
    "lint:text": "textlint \"articles/*.md\"",
    "lint": "npm run lint:md && npm run lint:text"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "textlint": "^15.2.2",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-prh": "^6.1.0",
    "zenn-cli": "^0.2.3"
  }
}
